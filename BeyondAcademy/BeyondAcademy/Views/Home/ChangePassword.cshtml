@model BeyondAcademy.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<body>
    <div class="container" style="padding-top: 20px;">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Change Password</h4>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Home" asp-action="ChangePassword" method="post" class="validate-form">
                            
                            @if (ViewData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewData["ErrorMessage"]
                                </div>
                            }
                            @if (ViewData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @ViewData["SuccessMessage"]
                                </div>
                            }

                            <div class="form-group">
                                <label for="currentPassword">Current Password</label>
                                <input type="password" class="form-control" id="currentPassword" name="CurrentPassword" value="@(Model?.CurrentPassword ?? string.Empty)" placeholder="Enter current password" required>
                            </div>

                            <div class="form-group">
                                <label for="newPassword">New Password</label>
                                <input type="password" class="form-control" id="newPassword" name="NewPassword" value="@(Model?.NewPassword ?? string.Empty)" placeholder="Enter new password" required>
                            </div>

                            <div class="form-group">
                                <label for="confirmPassword">Confirm New Password</label>
                                <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" value="@(Model?.ConfirmPassword ?? string.Empty)" placeholder="Confirm new password" required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block col-md-12">Change Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

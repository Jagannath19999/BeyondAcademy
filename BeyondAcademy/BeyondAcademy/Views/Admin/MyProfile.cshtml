@model BeyondAcademy.ViewModels.AdminDetailsViewModel

@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Admin Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>First Name:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.FirstName
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Last Name:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.LastName
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Mobile No:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.MobileNo
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Email
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Date of Birth:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.DateOfBirth
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>User ID:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.UserId
                        </div>
                    </div>
                </div>
                
                <form asp-action="UpdateProfile" method="get">
                    <input type="hidden" name="AcId" value="@Model.AcId" />
                    <input type="hidden" name="RegdId" value="@Model.RegdId" />
                    <div class="text-center mb-3">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>


@model IEnumerable<BeyondAcademy.ViewModels.StudentViewModel>
@{
    ViewData["Title"] = "StudentIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-action {
        height: 37px;
        padding: 6px 12px;
        line-height: 1.5;
        font-size: 0.875rem;
        color: #ffffff;
    }
</style>


<div class="container mt-1">
    <div class="row">
        <div class="col-md-12">
            <h2 class="align-content-center" style="text-align:center;">Manage Students Accounts</h2>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Mobile No</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.MobileNo</td>
                            <td>@student.Email</td>
                            <td>@student.DateOfBirth</td>
                            <td>
                                @if (student.IsActive.Value)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Inactive</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("UpdateStudent", new { id = student.RegdId })" class="btn btn-sm btn-primary btn-action">Update</a>
                                @if (!student.IsActive.Value)
                                {
                                    <button type="button" class="btn btn-sm btn-success btn-action" data-bs-toggle="modal" data-bs-target="#enableModal" data-student-id="@student.RegdId">Enable</button>
                                }
                                @if (student.IsActive.Value)
                                {
                                    <button type="button" class="btn btn-sm btn-danger btn-action" data-bs-toggle="modal" data-bs-target="#deleteModal" data-student-id="@student.RegdId">Disable</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to disable this student?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <input type="hidden" id="deleteStudentId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Disable</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="enableModal" tabindex="-1" aria-labelledby="enableModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="enableModalLabel">Enable Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to enable this student?
            </div>
            <div class="modal-footer">
                <form id="enableForm" method="post">
                    <input type="hidden" id="enableStudentId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Enable</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var studentId = button.data('student-id');
                var modal = $(this);
                modal.find('#deleteStudentId').val(studentId);
            });

            $('#deleteForm').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                var studentId = form.find('#deleteStudentId').val();

                $.post('/Admin/DeleteStudent', { id: studentId }, function (data) {
                    $('#deleteModal').modal('hide');
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: data.message
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message
                        });
                    }
                });
            });

            $('#enableModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var studentId = button.data('student-id');
                var modal = $(this);
                modal.find('#enableStudentId').val(studentId);
            });

            $('#enableForm').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                var studentId = form.find('#enableStudentId').val();

                $.post('/Admin/EnableStudent', { id: studentId }, function (data) {
                    $('#enableModal').modal('hide');
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: data.message
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message
                        });
                    }
                });
            });

            // var successMessage = '@TempData["SuccessMessage"]';
